{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/../cmake/FindVcpkgToolchain.cmake",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "inherits": "base",
            "name": "debug",
            "displayName": "Debug",
            "description": "Default debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "inherits": "base",
            "name": "release",
            "displayName": "Release",
            "description": "Default release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "inherits": "base",
            "name": "web",
            "hidden": true,
            "cacheVariables": {
                "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/../cmake/FindEmsdkToolchain.cmake",
                "VCPKG_TARGET_TRIPLET": "wasm32-emscripten-pthread",
                "PKG_CONFIG_ARGN": "--define-variable=prefix=$env{WASM_VIPS_OUTPUT}"
            },
            "environment": {
                "WASM_VIPS_OUTPUT": "/Users/sapon/Sources/wasm-vips/build/target",
                "PKG_CONFIG_PATH": "$env{WASM_VIPS_OUTPUT}/lib/pkgconfig"
            }
        },
        {
            "inherits": "web",
            "name": "web-debug",
            "displayName": "Web debug",
            "description": "Default web debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "inherits": "web",
            "name": "web-release",
            "displayName": "Web release",
            "description": "Default web release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "base",
            "configurePreset": "base",
            "verbose": false
        },
        {
            "inherits": "base",
            "name": "debug",
            "configurePreset": "debug",
            "displayName": "Debug",
            "description": "Default debug"
        },
        {
            "inherits": "base",
            "name": "release",
            "configurePreset": "release",
            "displayName": "Release",
            "description": "Default release"
        },
        {
            "inherits": "base",
            "name": "web-release",
            "configurePreset": "web-release",
            "displayName": "Web release",
            "description": "Default web release"
        },
        {
            "inherits": "base",
            "name": "web-debug",
            "configurePreset": "web-debug",
            "displayName": "Web debug",
            "description": "Default web debug"
        }
    ],
    "workflowPresets": [
        {
            "name": "debug",
            "displayName": "Debug",
            "description": "Default debug",
            "steps": [
                {
                    "type": "configure",
                    "name": "debug"
                },
                {
                    "type": "build",
                    "name": "debug"
                }
            ]
        },
        {
            "name": "release",
            "displayName": "Release",
            "description": "Default release",
            "steps": [
                {
                    "type": "configure",
                    "name": "release"
                },
                {
                    "type": "build",
                    "name": "release"
                }
            ]
        },
        {
            "name": "web-release",
            "displayName": "Web release",
            "description": "Default web release",
            "steps": [
                {
                    "type": "configure",
                    "name": "web-release"
                },
                {
                    "type": "build",
                    "name": "web-release"
                }
            ]
        },
        {
            "name": "web-debug",
            "displayName": "Web debug",
            "description": "Default web debug",
            "steps": [
                {
                    "type": "configure",
                    "name": "web-debug"
                },
                {
                    "type": "build",
                    "name": "web-debug"
                }
            ]
        }
    ]
}
